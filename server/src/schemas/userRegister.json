{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://capstone2-json.com/user.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 60,
      "format": "email"
    },
    "avatar": {
      "type": "string",
      "format": "url"
    },
    "bio": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["username","password","email"]
}
